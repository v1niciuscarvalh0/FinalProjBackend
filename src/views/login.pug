doctype html
html
  head
    title Login
    style.
      body { font-family: Arial, sans-serif; background-color: #f4f4f4; display: flex; justify-content: center; align-items: center; min-height: 100vh; margin: 0; }
      .login-container { background-color: #fff; padding: 25px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); width: 300px; text-align: center; }
      h1 { color: #333; margin-bottom: 20px; }
      .form-group { margin-bottom: 15px; text-align: left; }
      label { display: block; margin-bottom: 5px; color: #555; }
      input[type="email"], input[type="password"] { width: calc(100% - 20px); padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; }
      button { background-color: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px; width: 100%; }
      button:hover { background-color: #0056b3; }
      #message { margin-top: 15px; color: red; }
  body
    .login-container
      h1 Fazer Login
      form#loginForm
        .form-group
          label(for='email') Email:
          input(type='email', id='email', name='email', required)
        .form-group
          label(for='senha') Senha:
          input(type='password', id='senha', name='senha', required)
        button(type='submit') Entrar
        p#message
      script.
        document.getElementById('loginForm').addEventListener('submit', async function(event) {
          event.preventDefault(); // Impede o envio padrão do formulário

          const email = document.getElementById('email').value;
          const senha = document.getElementById('senha').value;
          const messageElement = document.getElementById('message');

          try {
            const response = await fetch('/api/auth/login', { // <-- Endpoint da sua API
              method: 'POST',
              headers: {
                'Content-Type': 'application/json' // É melhor enviar JSON do frontend para o backend para APIs REST
              },
              body: JSON.stringify({ email, senha })
            });

            const data = await response.json();

            if (response.ok) {
              // Login bem-sucedido
              localStorage.setItem('jwtToken', data.token); // Armazena o token
              messageElement.style.color = 'green';
              messageElement.textContent = data.mensagem + ' Redirecionando...';
              window.location.href = '/dashboard'; // Redireciona para uma página protegida
            } else {
              // Erro no login (ex: credenciais inválidas)
              messageElement.style.color = 'red';
              messageElement.textContent = data.mensagem || 'Erro ao fazer login.';
            }
          } catch (error) {
            console.error('Erro na requisição:', error);
            messageElement.style.color = 'red';
            messageElement.textContent = 'Erro de rede. Tente novamente.';
          }
        });